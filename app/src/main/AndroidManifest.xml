<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.topsports.androidstudy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:name=".MyApplication"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".JsBridgeActivity"/>
        <activity android:name=".activity.MyBehaviorActivity"/>
        <activity android:name=".activity.BottomSheetBvActivity"/>
        <activity android:name=".activity.PopupActivity"
            android:windowSoftInputMode="adjustPan"/>
    </application>

</manifest>